{
  "name": "smart-home-ui-v2",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "gen:pages": "npx tsx src/scripts/generate-device-pages.ts --batch",
    "gen:device-pages": "npx tsx src/scripts/generate-device-pages.ts",
    "test:device-generation": "npx tsx src/scripts/test-generation.ts",
    "test:phase2-generation": "npx tsx src/scripts/test-phase2-generation.ts",
    "preview": "vite preview",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:scripts": "tsc --noEmit --project tsconfig.scripts.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:scripts",
    "validate:generated-code": "npx tsx src/scripts/generate-device-pages.ts --validate-code",
    "validate:components": "npx tsx src/scripts/generate-device-pages.ts --validate-components",
    "validate:all": "npx tsx src/scripts/generate-device-pages.ts --run-validation",
    "gen:full-system": "npx tsx src/scripts/generate-device-pages.ts --batch --full-system",
    "test:phase3-validation": "npx tsx src/scripts/test-phase3-validation.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "i18next": "^23.5.0",
    "immer": "^10.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.2.0",
    "react-router-dom": "^6.15.0",
    "tailwind-merge": "^1.14.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "ajv": "^8.12.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "glob": "^10.3.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "playwright": "^1.37.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "tsx": "^4.19.4",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "yaml": "^2.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
